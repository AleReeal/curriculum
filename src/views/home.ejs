    <link rel="stylesheet" href="../css/home.css">
    <title>Home</title>
</head>
<body>
    <!--Main Navigation-->
<header>
  <!-- Sidebar -->
  <nav id="sidebarMenu" class="d-lg-block sidebar collapse bg-dark">
    <div class="position-sticky">
      <div class="list-group list-group-flush mx-3 mt-4">
        <a href="/home"><img class="logo" src="../images/logo-sito.png"></a>
        <br><br><br>
        <a href="" class="list-group-item list-group-item-action py-2 ripple bg-dark text-white active" aria-current="true">
          <i class="fas fa-fw me-3"></i><span>Io</span>
        </a>
        <a href="/portfolio" class="list-group-item list-group-item-action py-2 ripple bg-dark text-white">
          <i class="fas me-3"></i><span>Portfolio</span>
        </a>
        <a href="/contact" class="list-group-item list-group-item-action py-2 ripple bg-dark text-white"><i
            class="fas me-3"></i><span>I miei contatti</span>
          </a>
        <a href="/docs" class="list-group-item list-group-item-action py-2 ripple bg-dark text-white last-item"><i
            class="fas me-3"></i><span>Docs</span>
          </a>
        <a href="#" class="bg-dark">
          </a>
        <br><br><br><br><br><br>
